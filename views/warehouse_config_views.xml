<!-- views/warehouse_config_views.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Configuration Form View -->
    <record id="view_warehouse_transfer_config_form" model="ir.ui.view">
        <field name="name">warehouse.transfer.config.form</field>
        <field name="model">warehouse.transfer.config</field>
        <field name="arch" type="xml">
            <form string="Warehouse Transfer Configuration">
                <sheet>
                    <group>
                        <group>
                            <field name="app_warehouse_id" 
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Warehouse Contact Mappings">
                            <field name="mapping_ids">
                                <tree editable="bottom">
                                    <field name="warehouse_id" 
                                           options="{'no_create': True}"/>
                                    <field name="contact_id" 
                                           options="{'no_create': True}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Configuration Tree View -->
    <record id="view_warehouse_transfer_config_tree" model="ir.ui.view">
        <field name="name">warehouse.transfer.config.tree</field>
        <field name="model">warehouse.transfer.config</field>
        <field name="arch" type="xml">
            <tree string="Warehouse Transfer Configuration">
                <field name="app_warehouse_id"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_warehouse_transfer_config" model="ir.actions.act_window">
        <field name="name">Warehouse Transfer Configuration</field>
        <field name="res_model">warehouse.transfer.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Warehouse Transfer Settings
            </p>
            <p>
                Set up your App warehouse and warehouse-contact mappings here.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_warehouse_transfer_config"
              name="Warehouse Transfer Config"
              parent="stock.menu_stock_config_settings"
              action="action_warehouse_transfer_config"
              sequence="100"/>

</odoo>